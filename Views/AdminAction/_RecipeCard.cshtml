@model Recipe
<div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
    <div class="card dishcard shadow border-light mb-3 text-decoration-none rounded-3 overflow-hidden" style="height:450px; width:350px;">
        <div class="card-body" style="background-image: url('/images/@Model.Image'); background-size: cover; background-position: center;"></div>
        <div class="card-footer bg-muted d-flex justify-content-between align-items-center">
            <p class="card-title fw-bold fs-6" style="color:#155e75">@Model.Name</p>
            <div>
                <a asp-action="Edit" asp-controller="AdminAction" asp-route-id="@Model.Id"
                   class="btn btn-sm p-2 btn-sm btn-warning">
                    Edit
                </a>

                <a asp-action="Delete" asp-controller="AdminAction" asp-route-id="@Model.Id"
                   class="btn btn-sm p-2 btn-danger">
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>
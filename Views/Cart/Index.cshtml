@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Cart";
}

<div class="container pt-100 shadow rounded">
    <div class="row">
        <div class="col-12">
            <div class="border-bottom">
                <h4>Recipe Cart</h4>
                <p class="text-muted fst-italic">@Model.Count() Recipes in Cart</p>
            </div>
            <div>
                @foreach(var cart in Model)
                {
                    <div class="border-bottom d-flex flex-wrap p-2">
                        <img src="~/images/@cart.Image" class="cartImage"/>
                        <a asp-controller="Recipe" asp-action="Order" asp-route-id ="@cart.RecipeId" class="text-decoration-none px-2 cartTitle fw-bold">@cart.Name</a>
                        <a class="text-danger fw-bold p-2 text-decoration-none" asp-controller="Cart" asp-action="DeleteCartItem" asp-route-id="@cart.Id">Remove</a>
                    </div>
                }

                @if(@Model.Count() == 0){
                    <div class="text-center">
                        <i class="fas fa-shopping-cart mx-2 fs-5 text-warning emptycart"></i>
                        <p class="fw-bold fs-4">Your cart is empty</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
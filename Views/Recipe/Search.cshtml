@{
    ViewData["Title"] = "Search";
}
<style>
    #recipe-list {
        top: 5rem;
    }

        #recipe-list::-webkit-scrollbar {
            width: 8px;
        }


        #recipe-list::-webkit-scrollbar-thumb {
            background-color: #369AEB;
            border-radius: 10px;
        }

    .recipe-item {
        padding: 15px;
    }

        .recipe-item:hover {
            background-color: #369AEB;
            border-radius: 10px;
        }

            .recipe-item:hover li.recipe-item.list-group-item {
                color: white !important;
                text-decoration:none;
            }

    hr {
        padding: 0px;
        margin: 0px;
    }

</style>


<div class="container-fluid">
    <div class="row">
        <div class="col-12 mb-4">
            @Html.Partial("_SearchBar")
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="shadow rounded">
                <div class="border-bottom border-3 p-2">
                        <h4 class="text-center fst-italic" style="color:#155e75">Recipes</h4>
                        @Html.Partial("_SideMenu")
                </div>
            </div>
        </div>

        <div class="col-8">
            <h2 style="color:#155e75;">Search Recipes</h2>
            <div id="searchRecipes" class="row">
                @foreach (var recipe in (IEnumerable<Recipe>) ViewBag.Recipe)
                {
                    @Html.Partial("_RecipeCard", recipe);
                }
            </div>
        </div>
    </div>
</div>



